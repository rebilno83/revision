{% extends 'connect.html.twig' %}

{% block title %}Authentification{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Page d'authentification</h1>
    <!-- formulaire -->
	<form action="/connexion" method="post">
	  <fieldset>
	    <legend>Bienvenue, veuillez vous connecter</legend>
	    <div class="form-group row">
	      <label for="staticIdentifiant" class="col-sm-2 col-form-label">Nom</label>
	      <div class="col-sm-10">
	        <input type="text" class="form-control" id="staticIdentifiant" name="identifiant">
	      </div>
	    </div>
	    <div class="form-group row">
	      <label for="staticPassword" class="col-sm-2 col-form-label">Mot de passe</label>
	      <div class="col-sm-10">
	        <input type="password" class="form-control" id="staticPassword" name="password">
	      </div>
	    </div>
	    
	    </fieldset>
	    <button type="submit" class="btn btn-primary">Se connecter</button>
	</form>
</div>
{% endblock %}
